# ===================================
# Docker Compose Environment Variables
# ===================================

# Qdrant Cloud (Vector Database)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=textbook_chunks

# Neon Postgres (User Database)
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Translation Configuration (Feature 004)
TRANSLATION_MODEL=gpt-4o
MAX_TRANSLATION_TOKENS=16384
TRANSLATION_RATE_LIMIT_PER_MINUTE=10

# Personalization Configuration (Feature 005)
PERSONALIZATION_MODEL=gpt-4o-mini
PERSONALIZATION_TIMEOUT_SECONDS=60
PERSONALIZATION_DAILY_LIMIT=3
MAX_PERSONALIZATION_TOKENS=16384

# Authentication Secrets
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your-better-auth-secret-min-32-chars
JWT_SECRET=your-jwt-secret-min-32-chars

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
RATE_LIMIT_PER_MINUTE=10

# CORS Configuration
# JSON array of allowed origins (dynamically read by main.py)
# Example: ["http://localhost:3000","https://your-frontend.vercel.app","https://your-backend.vercel.app"]
CORS_ORIGINS=["http://localhost:3000","https://your-frontend.vercel.app","https://your-backend.vercel.app"]

# Auth Service URL
# For local: http://localhost:3001 or http://auth-service:3001 (Docker)
# For production: https://your-auth-service.vercel.app
BETTER_AUTH_URL=http://localhost:3001
