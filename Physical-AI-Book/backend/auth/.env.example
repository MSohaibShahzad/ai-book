# Database
DATABASE_URL=postgresql://user:password@postgres:5432/aibook?sslmode=disable

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3001

# JWT
JWT_SECRET=your-jwt-secret-key-min-32-chars

# Server
AUTH_SERVER_PORT=3001
AUTH_SERVER_HOST=0.0.0.0
NODE_ENV=production

# CORS Configuration
# Comma-separated list of allowed origins for trustedOrigins
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-frontend.vercel.app,https://your-backend.vercel.app

# Comma-separated list of allowed origins for CORS headers
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-frontend.vercel.app,https://your-backend.vercel.app
